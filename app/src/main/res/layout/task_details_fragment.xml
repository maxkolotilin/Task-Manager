<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/fragment_content_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/details_title_bottom_margin"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/font_size_huge"
            tools:text="Task title text text text text text"/>

        <TextView
            android:id="@+id/start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/details_date_time_bottom_margin"
            tools:text="started at date"
            style="@style/details_date_time_style" />

        <TextView
            android:id="@+id/due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/details_date_time_bottom_margin"
            tools:text="due date"
            style="@style/details_date_time_style" />

        <TextView
            android:id="@+id/estimated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="estimated time"
            style="@style/details_date_time_style" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/details_state_vertical_margin"
            android:layout_marginBottom="@dimen/details_state_vertical_margin"
            android:textSize="@dimen/font_size_extra_large"
            tools:text="Task State"/>

        <TextView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/font_size_small"
            tools:text="42% Completed"/>

        <SeekBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="@integer/max_progress"
            tools:progress="42"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/details_description_top_margin"
            android:textColor="@color/text_color_secondary"
            android:textSize="@dimen/font_size_normal"
            tools:text="Task description text text text text text  text  text"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>