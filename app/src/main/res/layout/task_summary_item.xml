<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/task_item_vertical_margin"
    android:layout_marginBottom="@dimen/task_item_vertical_margin"
    android:layout_marginStart="@dimen/task_item_horizontal_margin"
    android:layout_marginEnd="@dimen/task_item_horizontal_margin"
    app:cardElevation="@dimen/task_item_elevation"
    app:cardCornerRadius="@dimen/task_item_corner_radius"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/task_item_content_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/task_item_title_margin_bottom"
            android:textSize="@dimen/font_size_extra_large"
            android:textColor="@color/text_color_primary"
            tools:text="Sample title title title title title title title title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/task_item_due_date_margin_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_due_date"
                android:drawableLeft="@drawable/ic_due_date"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/font_size_normal"
                android:text="@string/due_date_label"/>

            <TextView
                android:id="@+id/task_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/task_due_date_left_margin"
                android:layout_marginStart="@dimen/task_due_date_left_margin"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/font_size_normal"
                tools:text="very very very very long formatted beautiful date"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/task_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/text_color_secondary"
                tools:text="42% Completed" />

            <TextView
                android:id="@+id/task_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/task_progress"
                android:layout_toStartOf="@id/task_progress"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/text_color_secondary"
                tools:text="State" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
